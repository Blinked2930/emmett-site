---
import Layout from '../layouts/Layout.astro';
import projects from '../data/projects.json';
---

<Layout title="Emmett Frett - Portfolio">
	<!-- Hero Section: split layout (text left, headshot right) -->
	<section class="relative min-h-screen flex flex-col md:flex-row">
		<!-- Left: light editorial panel -->
		<div class="flex-1 flex items-center justify-center md:justify-end py-16 md:py-0 px-8 sm:px-12 md:px-12 lg:px-20 xl:px-24 bg-zinc-50">
			<div class="text-left w-full max-w-xl">
				<h1 class="font-bold text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl mb-6 tracking-tight text-zinc-900">
					Emmett Frett
				</h1>
				<p class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-light text-zinc-500 tracking-wide">
	<span class="block mb-2">Peace Corps Volunteer</span>
	Sound Engineer | Builder
</p>
			</div>
		</div>
		<!-- Right: headshot (no text overlay) -->
		<div class="flex-1 relative min-h-[50vh] md:min-h-screen">
			<img
				src="/62-002_Original.jpeg"
				alt="Emmett Frett"
				class="absolute inset-0 w-full h-full object-cover object-center md:object-[center_30%]"
			/>
		</div>
	</section>

	<!-- Quote Section -->
	<section class="bg-white border-y border-zinc-200 py-32 px-4 sm:px-6 lg:px-8">
		<div class="max-w-3xl mx-auto flex flex-col items-center text-center">
			<div class="w-12 h-px bg-zinc-200 mb-8" aria-hidden="true"></div>
			<blockquote class="font-serif text-3xl sm:text-4xl font-medium text-zinc-800 leading-tight">
				'Life shrinks or expands according to one's courage.'
			</blockquote>
			<cite class="mt-6 not-italic text-sm uppercase tracking-[0.2em] text-zinc-400">
				— Anaïs Nin, 1939
			</cite>
		</div>
	</section>

	<!-- Projects Section -->
	<section class="py-24 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
		<h2 class="text-4xl sm:text-5xl font-bold mb-16 text-center tracking-tight text-zinc-900">
			My Projects
		</h2>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{projects.map((project) => {
				const isExternal = project.title === 'Letters from Albania';
				return (
					<a
						href={project.link}
						target={isExternal ? '_blank' : undefined}
						rel={isExternal ? 'noopener noreferrer' : undefined}
						class="group relative block bg-white border border-zinc-200 rounded-lg p-8 hover:-translate-y-1 transition-all duration-300 hover:border-zinc-300 hover:shadow-xl hover:shadow-zinc-200/50 cursor-pointer no-underline text-inherit"
					>
						<div class="absolute inset-0 rounded-lg bg-gradient-to-br from-zinc-50/0 to-zinc-100/0 group-hover:from-zinc-50/30 group-hover:to-zinc-100/30 transition-all duration-300" aria-hidden="true"></div>
						<div class="relative z-10">
							<h3 class="text-2xl font-bold mb-3 text-zinc-900">{project.title}</h3>
							<p class="text-zinc-500 font-light mb-4">{project.description}</p>
							<span class="text-sm font-medium text-zinc-500 group-hover:text-zinc-900 transition-colors duration-300 border-b border-transparent group-hover:border-zinc-500">
								View Artifact →
							</span>
						</div>
					</a>
				);
			})}
		</div>
	</section>
</Layout>

<style>
	h1 {
		font-family: 'Montserrat', sans-serif;
		font-weight: 800;
	}
	
	h2 {
		font-family: 'Montserrat', sans-serif;
		font-weight: 700;
	}
	
	h3 {
		font-family: 'Montserrat', sans-serif;
		font-weight: 700;
	}
</style>
