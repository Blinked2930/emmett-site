---
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'Emmett Frett' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Emmett Frett - Sound Engineer | Peace Corps Volunteer | Builder" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&family=Inter:wght@300;400&display=swap" rel="stylesheet" />
		
		<title>{title}</title>

		<style is:inline>
			/* Set initial state to invisible and slightly lower */
			body { 
				opacity: 0; 
				transform: translateY(20px);
				transition: opacity 0.8s ease-out, transform 0.8s ease-out;
			}
			/* This class will be added by the script below */
			body.loaded { 
				opacity: 1; 
				transform: translateY(0);
			}
		</style>
	</head>
	<body class="bg-zinc-50 text-zinc-900 antialiased selection:bg-zinc-300">
		
		{/* Only ONE slot tag. This is where your page content goes. */}
		<slot />
		
		<Footer />

		<script is:inline>
			// As soon as the DOM is ready, add the 'loaded' class
			document.addEventListener('DOMContentLoaded', () => {
				document.body.classList.add('loaded');
			});

			// Scroll-triggered glide-in using Intersection Observer
			const observer = new IntersectionObserver(
				(entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add('glide-in');
							observer.unobserve(entry.target);
						}
					});
				},
				{ threshold: 0.15 }
			);

			document.addEventListener('DOMContentLoaded', () => {
				document.querySelectorAll('.glide').forEach((el) => observer.observe(el));
			});
		</script>
	</body>
</html>